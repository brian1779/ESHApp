<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - East Side House App Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ESHApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark text-white sidebar collapse" style="min-height: 100vh;">
                <div class="d-flex flex-column justify-content-between h-100 p-3">
                    <!-- Top -->
                    <div>
                        <div class="mb-4">
                            <img src="~/images/profile-placeholder.png" class="img-fluid rounded-circle mb-2" width="80" alt="Profile">
                            <h5 class="mt-0">User Name</h5>
                        </div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/ProcessPayComFile">Process Paycom File</a>
                            </li>
                        </ul>
                    </div>
                    <!-- Bottom -->
                    <div>
                        <a class="nav-link text-white" asp-page="/Logout">Logout</a>
                    </div>
                </div>
            </nav>
            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="min-height: 100vh;">
                @RenderBody()
            </main>
        </div>
    </div>
</body>

</html>